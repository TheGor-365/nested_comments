<div class="shadow p-5 my-5">
  <%= simple_form_for :comment, url: post_comments_path(@post), method: :post do |f| %>
    <% if !parent.nil? %>
      <%#= f.hidden :parent_id, value: parent.id %>
      <input type="hidden" name="comment[parent_id]" value="<%= parent.id %>">
    <% end %>
    <%= f.input :content, as: :text %>
    <%= f.button :submit, class: "btn btn-sm btn-outline-success" %>
  <% end %>
</div>
